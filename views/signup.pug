extends layout2.pug
block content
      div.signupbox
        form(method='get' action='/signup')
        p.signuphead SIGN UP
        div
          input(type='search' class='input-username' placeholder='  username')
        div
          input(type='search' class='input-email' placeholder='  email')
        div
          input(type='text' class='input-avatar' placeholder="Optional Avatar URL Here")
        div
          input(type='search' class='input-password' placeholder='  password')
        div
          input(type='search' class='input-confirmPassword' placeholder='  confirmPassword')
        div
          p
          button(type='submit').btn-signUp SIGN UP
          p
          a(href='/login') Already have an account? Log in here.
      script(src="js/signup.js")

//-
      div.loginbox
        div(class="sign-up-container")
          div(class="errors-container")
          h2 Sign Up
          form(class="sign-up-form")
            .form-group
              label(for='username') Username
              input#username.form-control(type='text' name='userName' placeholder="Username")
            .form-group
              label(for='email') Email address
              input#email.form-control(type='email', name="email", placeholder='Enter Email')
              .form-group
              label(for='avatar') Avatar
              input#username.form-control(type='text' name='avatar' placeholder="Optional Avatar URL Here")
            .form-group
              label(for='password') Password
              input#password.form-control(type='password', name="password", placeholder='Password')
            button.btn.btn-primary(type='submit') Sign Up
          a(href='/login') Already have an account? Log in here.
        script(src="js/signup.js")
