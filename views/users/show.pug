extends ../layout.pug
block content
  div.user-container
    div.questionCard
      h2 Questions
      if questions.length === 0 
        div No Questions Yet
      each question in questions
        div 
          a(href=`/questions/${question.id}`) #{question.questionSubject}
        div.indent #{question.questionText}
      h2 Answers
      if answers.length === 0 
        div No Answers Yet
      each answer in answers
        a(href=`/questions/${answer.questionId}`) Question # #{answer.questionId}
        div.indent #{answer.answerText}
    
    div.userCard
      h2.userCard_userName= user.userName
      div.userCard_id 
        strong User ID: #{user.id}
        div.userCard_id 
          strong Answer Score: #{answerVotes.length}
      img.userCard_img(src=`${user.avatar}` width="250")
      div.userCard_bio 
        strong Bio: 
        div #{user.bio}
          div.deleteUser
            if (currentUserId === user.id)
              a.user-delete-link(href=`${user.id}/delete`) Delete User Account
    
      
      