doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="../style.css" rel='stylesheet' type='text/css')
    title Search Results
  body
    div.searchHeader= question.questionSubject
    br
    br
    div.questionContainer
      div.containerSolo
        div.questionSubject
          img(src='../images/upArrow.png' height="25" width="25")
          span #{question.questionSubject}
          img(src='../images/downArrow.png' height="25" width="25")
        div.questionTextSolo #{question.questionText}
        div.questionFooter Author: #{question.userId} </br> Posted: #{question.createdAt}
      div.containerSolo
        each answer in answers
          p.answer Answer: #{answer.answerText}
          p.questionFooter Author: #{answer.userId} </br> Posted: #{answer.createdAt}
