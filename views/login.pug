doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" type='text/css' href="../style.css")
    title Core Dump - Welcome
  body.gradient
    div.wrapper
      div.leftbar
        p.logobox-a
        p.logobox-b
        p.logobox-c
        a(href='/').logo COREDUMP
      div.center
        span.search
          form(method='get' action='/search/')
          span.button.btn.btn-info Search
          input(type='search' class='searchinput' placeholder='  search coredump')
          a(href='/login').login Login
          a(href='/signup').signup Sign Up
          span.avatar
        p.line
      div.loginbox
        div(class="log-in-container")
          div(class="errors-container")
          h2 Log In
          form(class="log-in-form")
            .form-group
              label(for='email') Email address
              input#email.form-control(type='email', name="email", placeholder='Enter email')
            .form-group
              label(for='password') Password
              input#password.form-control(type='password', name="password", placeholder='Password')
            button.btn.btn-primary(type='submit') Log In
          a(href='/sign-up') Don't have an account? Sign up here.
        script(src="js/log-in.js")
    div.gradient
