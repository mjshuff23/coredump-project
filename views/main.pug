extends layout.pug
block content
  div.main-question
    h2 Top Questions
    if signedIn
      //-button(type='submit' action="/postQuestion").main-btn-question Ask a question
      a(href='/postQuestion' style='text-decoration:none; color:white').main-btn-question Ask a question

  div.main-list-question.questionLink
    div.questionContainer
      each question in topQuestions
        div.containerSolo.box-width.main(data-questionId=question.id)
          div.questionRow1: a.questionLink.main(href=`/questions/${question.id}`) #{question.questionSubject}
          div.questionRow2
            div.questionVotes
              span(style="font-size: 2em; color: lightblue;")
                i(class="question fas fa-caret-up")
                p.score #{question.score}
              span(style="font-size: 2em; color: lightblue;")
                i(class="question fas fa-caret-down")
            div.questionTextSolo.questionText
              span !{question.questionText} <br>
            input(type="hidden" id="questionId" value=question.id)
          span.author Author: #{question.userId} </br> Posted: #{question.createdAt}
    script(type="text/javascript" src="/js/votes.js")
      //- Author: #{question.userId} </br> Posted: #{question.createdAt}
          p.main-questionText #{question.questionText}
          p.main-user Author: #{question.userId}, Posted: #{question.createdAt}
